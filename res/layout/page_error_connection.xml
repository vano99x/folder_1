<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@id/PageErrorConnection" android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
>
    <TextView 
		android:id="@id/up_lable" android:text="@string/lable_error_connection" 
		style="@style/up_lable_style" />
	
    <ImageView 
		android:id="@id/wait_animation" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_marginTop="30.0dip" android:src="@drawable/wait_animation_list" 
		android:layout_below="@id/up_lable" android:layout_centerHorizontal="true" 
	/>
	
    <ImageView 
		android:id="@id/icon_4" android:src="@drawable/icon_4" style="@style/small_icon2" 
	/>
	
    <TextView 
		android:id="@id/message" android:text="@string/message_error_connection" 
		android:layout_toRightOf="@id/icon_4" style="@style/message_style2" 
	/>
	
</RelativeLayout>